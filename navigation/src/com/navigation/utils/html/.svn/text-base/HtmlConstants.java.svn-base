package com.navigation.utils.html;

/**
 * 包含基本 {@code HTML} 值作为常量的工具类。
 * 
 * @author Fuchun
 * @version 1.0, 2009-06-04
 */
public class HtmlConstants {

    /**
     * 表示 {@code HTML} 标签的起始标签的起始符。
     */
    public static final String TAG_START       = "<";

    /**
     * 表示 {@code HTML} 标签的结束标签的起始符。
     */
    public static final String TAG_CLOSE_START = "</";

    /**
     * 表示 {@code HTML} 标签的结束符。
     */
    public static final String TAG_END         = ">";

    /**
     * 表示 {@code HTML} 标签的属性间的空白字符。
     */
    public static final char   WHITESPACE      = ' ';

    /**
     * 表示 {@code HTML} 标签的属性间的空白字符串。
     */
    public static final String WHITESPACE_STR  = (new Character(WHITESPACE)).toString();
}
